import React, { useState } from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { AlertTriangle, CheckCircle, TrendingUp, Droplets, Zap } from "lucide-react";
import { motion } from "framer-motion";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";

export default function DailyEstimator({ profile, waterBills, energyBills }) {
  if (!profile || !profile.household_size) {
    return (
      <Card className="border-none shadow-lg bg-gradient-to-br from-gray-50 to-gray-100">
        <CardContent className="p-6 text-center">
          <p className="text-gray-600 mb-3">Complete seu perfil para ver estimativas di√°rias personalizadas</p>
          <Link to={createPageUrl("Profile")}>
            <Button className="bg-gradient-to-r from-purple-500 to-pink-500">
              Completar Perfil
            </Button>
          </Link>
        </CardContent>
      </Card>
    );
  }

  // C√°lculos de estimativa di√°ria baseados no perfil completo
  const householdSize = profile.household_size || 1;
  const showerMinutes = profile.avg_shower_minutes || 10;
  const washingUses = profile.washing_machine_uses_per_week || 3;
  const acHours = profile.ac_hours_per_day || 0;
  
  // √Ågua: banho (6L/min) + outros usos (150L/pessoa/dia)
  const showerWaterPerDay = showerMinutes * 6 * householdSize;
  const otherWaterPerDay = 150 * householdSize;
  const dailyWaterEstimate = (showerWaterPerDay + otherWaterPerDay).toFixed(0);
  
  // Energia: AC + ilumina√ß√£o + eletrodom√©sticos
  const acEnergyPerDay = acHours * 1.5; // 1.5kW m√©dio
  const lightingEnergyPerDay = profile.lighting_type === 'led' ? 0.5 : 
                                profile.lighting_type === 'fluorescente' ? 1.5 : 3;
  const appliancesEnergyPerDay = 5; // Base para geladeira, TV, etc
  const dailyEnergyEstimate = (acEnergyPerDay + lightingEnergyPerDay + appliancesEnergyPerDay).toFixed(1);

  // Calcular consumo atual do m√™s
  const currentMonth = new Date().getMonth();
  const currentWaterBill = waterBills.find(b => new Date(b.reference_month).getMonth() === currentMonth);
  const currentEnergyBill = energyBills.find(b => new Date(b.reference_month).getMonth() === currentMonth);

  const currentDayOfMonth = new Date().getDate();
  
  const estimatedMonthlyWater = dailyWaterEstimate * 30;
  const estimatedMonthlyEnergy = dailyEnergyEstimate * 30;

  const waterStatus = currentWaterBill
    ? currentWaterBill.consumption_liters > estimatedMonthlyWater * 1.1 ? 'acima' 
      : currentWaterBill.consumption_liters < estimatedMonthlyWater * 0.9 ? 'abaixo' 
      : 'normal'
    : 'normal';

  const energyStatus = currentEnergyBill
    ? currentEnergyBill.consumption_kwh > estimatedMonthlyEnergy * 1.1 ? 'acima'
      : currentEnergyBill.consumption_kwh < estimatedMonthlyEnergy * 0.9 ? 'abaixo'
      : 'normal'
    : 'normal';

  // Calcular custo di√°rio
  const waterTariff = profile.water_tariff_per_m3 || 28.85;
  const energyTariff = profile.energy_tariff_per_kwh || 0.85;
  
  const dailyWaterCost = ((dailyWaterEstimate / 1000) * waterTariff).toFixed(2);
  const dailyEnergyCost = (dailyEnergyEstimate * energyTariff).toFixed(2);

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.5 }}
    >
      <Card className="border-none shadow-lg overflow-hidden">
        <CardHeader className="bg-gradient-to-r from-indigo-500 to-purple-500 text-white">
          <CardTitle className="flex items-center gap-2">
            <TrendingUp className="w-5 h-5" />
            Estimativa Di√°ria Personalizada
          </CardTitle>
        </CardHeader>
        <CardContent className="p-6">
          <div className="grid md:grid-cols-2 gap-6">
            <div className="space-y-3">
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-2">
                  <Droplets className="w-5 h-5 text-blue-600" />
                  <span className="font-semibold text-gray-900">√Ågua Hoje</span>
                </div>
                <Badge className={
                  waterStatus === 'acima' ? 'bg-red-100 text-red-700' :
                  waterStatus === 'abaixo' ? 'bg-green-100 text-green-700' :
                  'bg-blue-100 text-blue-700'
                }>
                  {waterStatus === 'acima' ? 'Acima da M√©dia' :
                   waterStatus === 'abaixo' ? 'Econ√¥mico!' :
                   'Normal'}
                </Badge>
              </div>
              <div className="bg-blue-50 rounded-xl p-4">
                <div className="flex items-baseline gap-2 mb-1">
                  <p className="text-3xl font-bold text-blue-700">{dailyWaterEstimate}</p>
                  <p className="text-sm text-gray-600">litros/dia</p>
                </div>
                <p className="text-lg font-semibold text-blue-600">
                  R$ {dailyWaterCost}/dia
                </p>
                <div className="mt-3 pt-3 border-t border-blue-200">
                  <p className="text-xs text-gray-600">
                    {householdSize} pessoa(s) ‚Ä¢ {showerMinutes} min/banho
                  </p>
                  <p className="text-xs text-gray-600">
                    Tarifa SAAE: R$ {waterTariff.toFixed(2)}/m¬≥
                  </p>
                </div>
              </div>
            </div>

            <div className="space-y-3">
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-2">
                  <Zap className="w-5 h-5 text-amber-600" />
                  <span className="font-semibold text-gray-900">Energia Hoje</span>
                </div>
                <Badge className={
                  energyStatus === 'acima' ? 'bg-red-100 text-red-700' :
                  energyStatus === 'abaixo' ? 'bg-green-100 text-green-700' :
                  'bg-amber-100 text-amber-700'
                }>
                  {energyStatus === 'acima' ? 'Acima da M√©dia' :
                   energyStatus === 'abaixo' ? 'Econ√¥mico!' :
                   'Normal'}
                </Badge>
              </div>
              <div className="bg-amber-50 rounded-xl p-4">
                <div className="flex items-baseline gap-2 mb-1">
                  <p className="text-3xl font-bold text-amber-700">{dailyEnergyEstimate}</p>
                  <p className="text-sm text-gray-600">kWh/dia</p>
                </div>
                <p className="text-lg font-semibold text-amber-600">
                  R$ {dailyEnergyCost}/dia
                </p>
                <div className="mt-3 pt-3 border-t border-amber-200">
                  <p className="text-xs text-gray-600">
                    AC: {acHours}h/dia ‚Ä¢ Ilumina√ß√£o: {profile.lighting_type || 'misto'}
                  </p>
                  <p className="text-xs text-gray-600">
                    Tarifa CEMIG: R$ {energyTariff.toFixed(2)}/kWh
                  </p>
                </div>
              </div>
            </div>
          </div>

          {(waterStatus === 'acima' || energyStatus === 'acima') && (
            <div className="mt-4 p-3 bg-red-50 border border-red-200 rounded-xl flex items-start gap-2">
              <AlertTriangle className="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" />
              <div className="flex-1">
                <p className="text-sm font-medium text-red-800">Aten√ß√£o: Consumo Elevado!</p>
                <p className="text-xs text-red-700 mt-1">
                  Seu consumo est√° acima do esperado baseado no seu perfil. Confira as dicas personalizadas.
                </p>
                <Link to={createPageUrl("Tips")}>
                  <Button size="sm" variant="outline" className="mt-2 text-red-700 border-red-300 hover:bg-red-100">
                    Ver Dicas
                  </Button>
                </Link>
              </div>
            </div>
          )}

          {waterStatus === 'abaixo' && energyStatus === 'abaixo' && (
            <div className="mt-4 p-3 bg-green-50 border border-green-200 rounded-xl flex items-start gap-2">
              <CheckCircle className="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" />
              <div>
                <p className="text-sm font-medium text-green-800">Parab√©ns! üéâ</p>
                <p className="text-xs text-green-700 mt-1">
                  Voc√™ est√° economizando mais que o esperado. Continue assim!
                </p>
              </div>
            </div>
          )}

          <div className="mt-4 p-3 bg-purple-50 border border-purple-200 rounded-xl">
            <p className="text-xs text-purple-800">
              üí° As estimativas s√£o calculadas com base nas suas configura√ß√µes de perfil, h√°bitos e tarifas dos provedores SAAE e CEMIG.
            </p>
          </div>
        </CardContent>
      </Card>
    </motion.div>
  );
}